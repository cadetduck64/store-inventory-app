<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <script async src="/updateView.js" type="text/javascript" crossorigin="anonymous" ></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> -->

    <title>Update item</title>
</head>
<body>
    <h1>Inventory update</h2>
        <%- include('navbar.ejs'); %>
    <div id="update-form">
        <form action="update/updateentry" method="post">
            <div class=input-group-text>
                <span class="input-group-text">product ID</span>
                <input name="updateId" class="update-id" readonly><%= %></input>
            </div>
            <div class=input-group-text>
                <span class="input-group-text">product name</span>
                <input name="updateName" class="update-name"  required><%=locals.inventory.product_name %></input>
            </div>
            <div class=input-group-text>
                <span class="input-group-text">product type: </span>
                <input name="updateType" class="update-type" required><%=locals.inventory.product_type %></input>
            </div>
            <div class=input-group-text>
                <span class="input-group-text">quantity: </span>
                <input name="updateQuantity" class="update-quantity" required><%=locals.inventory.quantity %></input>
            </div>
            <div class=input-group-text>
                <span class="input-group-text">expiration date: </span>
                <input name="updateExpiration" class="update-expiration" required><%=locals.inventory.expiration_date %></input>
            </div>
            <div class=input-group-text>
                <span class="input-group-text">last ordered: </span>
                <input name="updateLastOrdered" class="update-last-ordered" required><%=locals.inventory.last_ordered %></input>
            </div>
            <button class="btn btn-primary" id="update-button" type="submit" id="updateInfoId">submit Update</button>
        </form> 
    </div>

    <div class="">
    <% locals.inventory.map((item) => { %>
        <div class="m-4" border border-dark">
        <ul class="p-2 list-group border border-dark">
          inventory id:<li class="item-id list-group-item"> <%= item.id %></li>
          product name:<li class="product-name list-group-item"> <%= item.product_name %></li>
          product type: <li class="product-type list-group-item"><%= item.product_type %></li>
          quantity: <li class="quantity list-group-item"><%= item.quantity %></li>
          expiration date: <li class="expiration-date list-group-item"><%= item.expiration_date %></li>
          last ordered: <li class="last-ordered list-group-item"><%= item.last_ordered %></li>
          <div class=".item-options">
            <button class="choose-update btn btn-primary">update Item</button>
            <a href="update/delete/<%= item.id %>"><button class="btn btn-primary">delete Item</button></a>
          </div>
        </ul>
    </div>
    <% }) %>
    </div>

</body>
</html>