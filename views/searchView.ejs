<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Search</title>
</head>
<body>
    <h1>Item search</h1>
    <%- include('../views/navbar.ejs'); %>
    <div class="border border-black p-3">
        <form action="../search/query" method="post">
            <div class=input-group-text>
                <span class="input-group-text">id: </span>
                <input name="id" type="text" class="item-input" id="inputGroup-sizing-sm"" >
            </div>
            <div class=input-group-text>
                <span class="input-group-text">product name: </span>
                <input name="productName" type="text" class="item-input" >
            </div>
            <div class=input-group-text>
                <span class="input-group-text">product type: </span>
                <input name="productType" type="text" class="item-input" >
            </div>
            <div class=input-group-text>
                <span class="input-group-text">quantity: </span>
                <input name="quantity" type="text" class="item-input" >
            </div>
            <div class=input-group-text>
                <span class="input-group-text">expiration date: </span>
                <input name="expirationDate" type="date" class="item-input" >
            </div>
            <div class=input-group-text>
                <span class="input-group-text">last ordered: </span>
                <input name="lastOrdered" type="date" class="item-input" >
            </div>
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>

    <div >
        <% if (locals.searchResults != undefined) {%>
            <% locals.searchResults.map((entry) => { %>
        <div >
            <ul class="list-group m-3 border border-dark">
                <li class="list-group-item">id: <%= entry.id %></li>
                <li class="list-group-item">product name: <%= entry.product_name %></li>
                <li class="list-group-item">product type: <%= entry.product_type %></li>
                <li class="list-group-item">quantity: <%= entry.quantity %></li>
                <li class="list-group-item">expiration date: <%= entry.expiration_date %></li>
                <li class="list-group-item">last ordered: <%= entry.last_ordered %></li>
            </ul>
        </div>
                <% }) %>
        <% } %>
    </div>
</body>
</html>